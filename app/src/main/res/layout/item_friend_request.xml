<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_cv"
        app:cardCornerRadius="10dp"
        app:cardElevation="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/iv_rounded_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_rounded_img_view"
                    android:src="@drawable/sample_img"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/gray"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_sender_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:visibility="gone"
                    android:textColor="@color/gray"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_recipient_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:visibility="gone"
                    android:textColor="@color/gray"
                    android:textSize="17sp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:text="@string/confirm"
                    android:elevation="20dp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_button_confirm"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_delete"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:text="@string/delete"
                    android:elevation="20dp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_button_delete"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>



